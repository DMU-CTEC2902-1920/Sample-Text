@model IEnumerable<dmuBlogger.Models.Game>

@{
    ViewBag.Title = "Index";
    int x = Convert.ToInt32(TempData["DeveloperID"]);
}

<h2>Index</h2>

<p>
    Games for @TempData["DeveloperID"]
    <br />
    @Html.ActionLink("Add Game", "Create", new { id = TempData["DeveloperID"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeveloperID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameReleaseDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.DeveloperID == Convert.ToInt32(TempData["DeveloperID"]))
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeveloperID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GameReleaseDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GameId }) |
            @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GameId })
        </td>
    </tr>
    }
}

</table>
